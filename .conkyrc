background no
cpu_avg_samples 2
net_avg_samples 2
out_to_console no
use_xft yes
xftfont droidsans:size=10
own_window_transparent no
own_window_colour hotpink
xftalpha 0.8
mail_spool $MAIL
update_interval 0.5
own_window yes
own_window_colour black
own_window_transparent yes
own_window_type override
double_buffer yes
maximum_width 500
text_buffer_size 4096
draw_shades no
draw_outline no
draw_borders no
stippled_borders 10
border_width 1
default_color black
default_shade_color black
default_outline_color black
# gap_x 5
gap_y 40
alignment top_right
use_spacer no
no_buffers yes
uppercase no

