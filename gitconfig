[gpg]
	program = gpg2
[user]
	signingkey = BDDE55C917FC7877
	name = Ilya Reshetnikov
	email = devxom@gmail.com
[diff]
    renames = copies
    mnemonicprefix = true
[core]
    excludesfile = ~/.gitignore
    whitespace = -trailing-space
[color]
    ui = auto
    interactive = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[pager]
    diff = LESS=RS less -c
[http]
    cookiefile = ~/.gitcookies
[gitflow "prefix"]
    feature = feature-
    release = release-
    hotfix = hotfix-
    support = support-
    versiontag = v
[pretty]
    # Result: <short-sha> <commit-message> (<pointer-names>) -- <commit-author-name>; <relative-time>
    nice = "%C(yellow)%h%C(reset) %C(white)%s%C(cyan)%d%C(reset) -- %an; %ar"
[push]
    default = simple
[alias]
    ac = apply --check
    # Add untracked, remove deleted, and show status
    adda = !git add -A && git status
    ama = am --abort
    amr = am --resolved
    ams = am --skip
    ap = apply
    as = apply --stat
    assume = update-index --assume-unchanged
    assumeall = "!git st -s | awk {'print $2'} | xargs git assume"
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    b = branch
    ba = branch -a
    barebranch = !sh -c 'git symbolic-ref HEAD refs/heads/$1 && git rm --cached -r . && git clean -xfd' -
    bd = branch -d
    br = branch -r
    c = commit
    ca = commit -a
    cad = commit -a --amend
    cam = commit -am
    cd = commit --amend
    ced = commit --allow-empty --amend
    cem = commit --allow-empty -m
    cleanup = !git clean -df && git stash clear
    cm = commit -m
    co = checkout
    flat = clone --depth 1
    human = name-rev --name-only --refs=refs/heads/*
    l  = log --graph --pretty=format:'%C(Yellow)%h %C(Cyan)%ad %C(White)%s%C(Green)%d %C(Blue)[%an]' --date=short
    lo = "log --graph --date=short --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
    last = "!git log -7 HEAD --abbrev-commit --date=short --pretty=format:'%h%x00%cd%x00%s%x00%an%x00%d' $@ | gawk -F '\\0' '{ printf \"\\033[31m%s\\033[m \\033[32m%s\\033[m  %-.40s \\033[30;1m%s\\033[m\\033[33m%s\\n\", $1, $2, gensub(/(.{49}).{2,}/, \"\\\\1â€¦\",\"g\",$3), $4, $5 }';"
    lsf = "!git ls-files | grep -i"
    ours = "!f() { git checkout --ours $@ && git add $@; }; f"
    plom = pull origin master
    plpm = pull upstream master
    psao = push --all origin
    psom = push origin master
    serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
    subpull = !git submodule foreach git pull --tags origin master
    subrepo = !sh -c 'filter-branch --prune-empty --subdirectory-filter $1 master' -
    theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
    trim = !git remote prune origin && git gc
    unassume = update-index --no-assume-unchanged
    unassumeall = !git assumed | xargs git update-index --no-assume-unchanged
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"