# bindsym $mod+Shift+i mode $keyboardMode
bar
{
    output VGA1
    # status_command i3blocks -c $HOME/.config/i3blocks/config.i3
    status_command $HOME/.config/i3/conkyi3-2.sh
    modifier $mod
    position top
    font pango:Source Code Pro 10
    colors {
        background $bg-color
        statusline #586E75
        separator  #586E75
        focused_workspace  #B58900 #EEE8D5 #B58900
        active_workspace   #586E75 #EEE8D5 #586E75
        inactive_workspace #FDF6E3 #EEE8D5 #586E75
        urgent_workspace   #DC322F #DC322F #FAFAFA
    }
}

bar
{
    output HDMI1
    status_command $HOME/.config/i3/conkyi3.sh
    modifier $mod
    tray_output VGA1
    position top
    font pango:Source Code Pro 10
    colors {
        background $bg-color
        statusline #586E75
        separator  #586E75
        #                  border                 background           text
        focused_workspace  $text-color            $bg-color            $text-color
        active_workspace   $inactive-text-color   $active-bg-color     $active-text-color
        inactive_workspace $inactive-bg-color     $inactive-bg-color   $inactive-text-color
        urgent_workspace   $urgent-bg-color       $urgent-bg-color     $urgent-text-color
    }
}



# window colors
#                       border              background          text                  indicator
client.focused          $text-color         $bg-color           $text-color           $indicator
client.unfocused        $inactive-bg-color  $inactive-bg-color  $inactive-text-color  $indicator
client.focused_inactive $inactive-bg-color  $inactive-bg-color  $inactive-text-color  $indicator
client.urgent           $urgent-bg-color    $urgent-bg-color    $text-color           $indicator

