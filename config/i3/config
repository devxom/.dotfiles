# exec_always /usr/bin/gnome-settings-daemon
exec $nsi $HOME/.config/i3/autostart

# Hotkeys
bindsym $mod+Control+t       exec xfce4-terminal
bindsym $mod+Control+e       exec subl
bindsym $mod+Shift+i         exec urxvt -e alsamixer
bindsym XF86PowerOff         exec systemctl poweroff
# start a terminal
# bindsym $mod+Return exec xfce4-terminal
bindsym    $mod+Return            exec $nsi urxvt
# Alsa Audio controls11
bindsym XF86AudioLowerVolume      exec $nsi amixer -c 0 -q set Master 1%-; exec notify-send 'alert';
bindsym XF86AudioRaiseVolume      exec $nsi amixer -c 0 -q set Master 1%+

bindsym    $mod+Shift+Return      exec $nsi urxvt -e tmux
bindsym    $mod+$alt+f            exec $nsi urxvt -title ranger -e ranger
# bindsym    $mod+$alt+f            exec $nsi urxvt -title "ranger [#]" -e sudo ranger
