# i3 config file
# devxom upd 29/06/2016

# # Variables
set $mod   Mod4
set $alt   Mod1

#-------------------------------TAG-------------------------------
set $tag1    "1 "
set $tag2    "2 "
set $tag3    "3 "
set $tag4    "4 "
set $tag5    "5 "
set $tag6    "6 "
set $tag7    "7 "
set $tag8    "8 "
set $tag9    "9 "
#-------------------------------TAG-------------------------------
#-------------------------------ASSIGN-------------------------------
assign [class="Xfce4-terminal"]         → $tag1
assign [class="Transmission"]           → $tag1
assign [class="feh"]                    → $tag1

assign [class="GitKraken"]              → $tag2
assign [class="Hexchat"]                → $tag2
assign [class="Nautilus"]               → $tag2

assign [class="Firefox"]                → $tag4
assign [class="google-chrome-unstable"] → $tag4

assign [class="Subl"]                   → $tag5

assign [class="^telegram$"]             → $tag6
assign [class="tg-upd"]                 → $tag6
assign [class="Thunderbird"]            → $tag6
assign [class="Pidgin"]                 → $tag6
assign [class="google-chrome-unstable ($HOME/.config/chrome-slack-0/"]              → $tag6

assign [class="Skype"]                  → $tag7
#-------------------------------ASSIGN-------------------------------



set $mod Mod4

# font (xft uses pango, so, you can use pango instead xft, the result will be the same
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:Inconsolata 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# hide borders adjacent to the screen edge
hide_edge_borders both

# No mouse cursor "stealing" across workspaces
focus_follows_mouse no
mouse_warping       none

# Some apps are "dumb"
popup_during_fullscreen leave_fullscreen

workspace_layout tabbed
popup_during_fullscreen ignore

# start dmenu (a program launcher)
bindsym $mod+Shift+d    exec rofi -show ssh
bindsym $mod+d          exec rofi -show run -width 600 -fg "#B0E670" -bg "#14161F" -hlfg "#14161F" -hlbg "#B0E670" -bc "#14161F" -location 0 -lines 6 -bw 0 -font "Inconsolata 16" -padding 10 -separator-style none -opacity 80
#rofi -show run -font "Hack 12" -o 75
bindsym $mod+Ctrl+d     exec rofi -show window -lines 10 -location 2 -xoffset 0 run -font "Hack 12" -o 75

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+j           focus left
bindsym $mod+k           focus down
bindsym $mod+l           focus up
bindsym $mod+semicolon   focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left        focus left
bindsym $mod+Down        focus down
bindsym $mod+Up          focus up
bindsym $mod+Right       focus right

## Movement ##
# move focused window
bindsym $mod+Shift+h            move left
bindsym $mod+Shift+j            move down
bindsym $mod+Shift+k            move up
bindsym $mod+Shift+l            move right
# cursor keys
bindsym $mod+Shift+Left         move left
bindsym $mod+Shift+Down         move down
bindsym $mod+Shift+Up           move up
bindsym $mod+Shift+Right        move right

#-----------------------------WindowRule--------------------------
new_window pixel 1
new_float  pixel 1
hide_edge_borders both

bindsym $mod+m move scratchpad
bindsym $mod+o scratchpad show

# splitting mode
bindsym $mod+g              split h
bindsym $mod+v              split v

## Layout ##
# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s             layout stacking
bindsym $mod+Shift+t        layout tabbed
bindsym $mod+e              layout toggle split
bindsym $mod+f              fullscreen

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# floating mode
floating_modifier           $mod
bindsym $mod+space          focus mode_toggle

# sticky window (newest version of i3)
bindsym $mod+Shift+s sticky toggle

# focus the parent container
bindsym $mod+a focus parent
bindsym $mod+t border toggle

# focus the child container
# bindsym $mod+d focus child
bindsym $mod+c move absolute position center

# switch to workspace
bindsym $mod+comma      workspace prev
bindsym $mod+period     workspace next
bindsym $mod+1          workspace $tag1
bindsym $mod+2          workspace $tag2
bindsym $mod+3          workspace $tag3
bindsym $mod+4          workspace $tag4
bindsym $mod+5          workspace $tag5
bindsym $mod+6          workspace $tag6
bindsym $mod+7          workspace $tag7
bindsym $mod+8          workspace $tag8
bindsym $mod+9          workspace $tag9

# move focused container to workspace
bindsym $mod+Shift+comma  move container to workspace prev
bindsym $mod+Shift+period move container to workspace next
bindsym $mod+Shift+1      move container to workspace $tag1
bindsym $mod+Shift+2      move container to workspace $tag2
bindsym $mod+Shift+3      move container to workspace $tag3
bindsym $mod+Shift+4      move container to workspace $tag4
bindsym $mod+Shift+5      move container to workspace $tag5
bindsym $mod+Shift+6      move container to workspace $tag6
bindsym $mod+Shift+7      move container to workspace $tag7
bindsym $mod+Shift+8      move container to workspace $tag8
bindsym $mod+Shift+9      move container to workspace $tag9

# reload/restart/exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Border togle
bindsym $mod+b border toggle

# screenshot
bindsym $mod+Shift+Print exec "mkdir -p $HOME/Dropbox/Screenshots && scrot $HOME/Dropbox/Screenshots/'screenshot-%Y-%m-%d-%T'.png && notify-send -u low 'Screenshot saved'"

# exit i3 (logs you out of your X session)
bindsym Control+$Alt+Return exec i3-msg exit
# shutdown computer
bindsym Control+$Alt+Delete exec systemctl poweroff
# reboot computer
bindsym Control+$Alt+BackSpace exec systemctl reboot
# lock screen
# bindsym Control+$Alt+l exec mate-screensaver-command -
# bindsym Control+Mod1+l exec i3-msg workspace 1 && i3lock -c 111111 -d
# bindsym Control+$Alt+s exec i3-msg workspace $tag1 && sleep 3 && xset dpms force standby

# resize window (you can also use the mouse for that)
mode "" {

    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod + r mode ""
bindsym $mod+Control+Left  workspace prev
bindsym $mod+Control+Right workspace next

set $left  VGA1
set $right HDMI1

# Automatically putting clients on specific workspaces
workspace $tag1 output $left  # Term
workspace $tag2 output $left  # git
workspace $tag3 output $left  # gui shit - skype
workspace $tag4 output $right # web
workspace $tag5 output $right # code
workspace $tag6 output $right # mail

#Float
#    xprop | grep -i 'class'         #
for_window [class="Lxappearance"]           floating enable
for_window [class="File-roller" ]           floating enable
for_window [class="Skype" ]                 floating enable
for_window [class="mpv" ]                   floating enable
for_window [class="Gnome-contacts" ]        floating enable
for_window [class="feh" ]                   floating enable

for_window [title="^Java$"] floating enable

for_window [window_role="pop-up"]           floating enable
for_window [window_role="bubble"]           floating enable
for_window [window_role="task_dialog"]      floating enable
for_window [window_role="Preferences"]      floating enable
for_window [window_type="dialog"]           floating enable
for_window [window_type="menu"]             floating enable

# Decorate
for_window [class="urxvt"]                  border pixel 2

#Shutdown,Reboot,Lock Screen
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l       exec --no-startup-id i3exit lock, mode "default"
    bindsym e       exec --no-startup-id i3exit logout, mode "default"
    bindsym s       exec --no-startup-id i3exit suspend, mode "default"
    bindsym h       exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r       exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

bar
{
    # status_command i3blocks
    status_command $HOME/.config/i3/conkyi3.sh
    # status_command i3status -c $HOME/.config/i3/i3status.conf
    modifier $mod
    tray_output HDMI1
    position top
    font pango:Hack 10
    colors {
      background #002b36
      statusline #839496
      separator  #586e75
      focused_workspace  #b58900 #b58900 #002b36
      active_workspace   #586e75 #586e75 #002b36
      inactive_workspace #073642 #002b36 #839496
      urgent_workspace   #dc322f #dc322f #fdf6e3
    }
}
client.focused          #002b36 #586e75 #fdf6e3 #268bd2
client.focused_inactive #002b36 #073642 #839496 #073642
client.unfocused        #002b36 #073642 #839496 #073642
client.urgent           #002b36 #dc322f #fdf6e3 #002b36

exec_always /usr/bin/gnome-settings-daemon
exec --no-startup-id $HOME/.config/i3/autostart

# Hotkeys
bindsym $mod+Control+t       exec xfce4-terminal
bindsym $mod+Control+e       exec subl
bindsym $mod+Shift+i         exec st -e alsamixer
bindsym XF86PowerOff         exec systemctl poweroff
bindsym $alt+b               exec "xsel -op | xsel -ib"
# start a terminal
bindsym $mod+Return exec Xfce4-terminal
# Alsa Audio controls
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 0 -q set Master 1%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 0 -q set Master 1%+

